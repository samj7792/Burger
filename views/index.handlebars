<div class="container">

    <h1 id="title">Eat-Da-Burger</h1>
    <img id="burger" class="mx-auto d-block"src="../assets/images/burger.png" alt="Burger">
    
    <div class="row">
        <div class="col col-6">
            <h2>Burgers that have not been devoured!</h2>

            <ul>
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col col-6">
            <h2>Burgers that have been devoured!</h2>

            <ul>
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>

    <h2>Add a Burger</h2>
    <form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name">
    </div>

    <button type="submit">Add Burger</button>
    </form>
</div>

<div class="modal fade" id="modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" type="button" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Please Enter a Burger</h2>
            </div>
        </div>
    </div>
</div>